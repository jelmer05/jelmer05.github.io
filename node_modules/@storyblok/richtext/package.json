{
  "name": "@storyblok/richtext",
  "type": "module",
  "version": "3.8.2",
  "description": "Storyblok RichText Resolver",
  "author": "Alvaro Saburido <hola@alvarosaburido.dev> (https://github.com/alvarosabu/)",
  "license": "MIT",
  "homepage": "https://github.com/storyblok/monoblok/tree/main/packages/richtext#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/storyblok/monoblok.git",
    "directory": "packages/richtext"
  },
  "bugs": {
    "url": "https://github.com/storyblok/monoblok/issues"
  },
  "keywords": [
    "storyblok",
    "richtext",
    "resolver"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "umd": "./dist/index.umd.js"
    },
    "./markdown-parser": {
      "import": {
        "types": "./dist/markdown-parser.d.ts",
        "default": "./dist/markdown-parser.js"
      },
      "require": {
        "types": "./dist/markdown-parser.d.cts",
        "default": "./dist/markdown-parser.cjs"
      },
      "umd": "./dist/markdown-parser.umd.js"
    },
    "./html-parser": {
      "import": {
        "types": "./dist/html-parser.d.ts",
        "default": "./dist/html-parser.js"
      },
      "require": {
        "types": "./dist/html-parser.d.cts",
        "default": "./dist/html-parser.cjs"
      },
      "umd": "./dist/html-parser.umd.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "markdown-parser": [
        "./dist/markdown-parser.d.ts"
      ],
      "html-parser": [
        "./dist/html-parser.d.ts"
      ]
    }
  },
  "files": [
    "*.d.ts",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "markdown-it": "^14.1.0",
    "markdown-it-github": "^0.5.0",
    "node-html-parser": "^7.0.1"
  },
  "devDependencies": {
    "@arethetypeswrong/core": "^0.18.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/markdown-it": "^14.1.2",
    "@vitest/coverage-v8": "^3.1.3",
    "@vitest/ui": "^3.1.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-vue": "^9.32.0",
    "kolorist": "^1.8.0",
    "lint-staged": "^15.5.2",
    "pathe": "^2.0.3",
    "prettier": "^3.4.2",
    "release-it": "^18.1.2",
    "tsdown": "^0.12.9",
    "typescript": "5.8.3",
    "vitest": "^3.1.3",
    "vue": "^3.5.13",
    "@storyblok/eslint-config": "0.4.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        2,
        "always",
        200
      ]
    }
  },
  "nx": {
    "implicitDependencies": [
      "!@storyblok/vue",
      "!@storyblok/playground-*"
    ]
  },
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "test:types": "tsc --noEmit --skipLibCheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:ci": "vitest run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "playground": "cd playground && npm run dev",
    "playground:vue": "cd playground/vue && npm run dev",
    "playground:react": "cd playground/react && npm run dev",
    "playground:all": "pnpm -r --parallel --filter='./playground/*' run dev",
    "release": "release-it",
    "release:dry": "release-it --dry-run"
  }
}